[flake8]

exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    .tox,
    .venv,
    .env,
    *.egg-info,
    *.egg,
    *.pyc,
    *.pyo,
    *.pyd,
    *.db,
    *.sqlite3,
    *.log
max-line-length = 99
max-complexity = 10


### DARGLINT PLUGIN ###
strictness = full
# https://numpydoc.readthedocs.io/en/latest/format.html
docstring_style = numpy
